	<h1 class="text-4xl font-bold mb-8">Enter Player Names</h1>
	<form action="/game/new?mode=multi" method="post" class="w-full max-w-md">
		<div class="mb-4">
			<label for="player1" class="block text-lg mb-2">Player 1 Name</label>
			<input type="text" name="player1" id="player1" required class="w-full p-2 rounded text-black">
		</div>
		<div class="mb-4">
			<label for="player2" class="block text-lg mb-2">Player 2 Name</label>
			<input type="text" name="player2" id="player2" required class="w-full p-2 rounded text-black">
		</div>
		<button type="submit"
			class="w-full py-3 text-xl bg-purple-600 rounded hover:bg-purple-700 transition-colors">Start Multiplayer
			Game</button>
	</form>

	<script src="multiplayer.js"></script>