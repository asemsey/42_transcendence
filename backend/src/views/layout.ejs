<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="ie=edge" />
	<title>
		<%= title %>
	</title>
	<!-- <link href="/output.css" rel="stylesheet"> -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css">
	<style>
		body { font-family: Arial, sans-serif; text-align: center; }
		.page { display: none; padding: 20px; }
		.active { display: block; }
		button { margin: 10px; padding: 10px; }
	</style>
</head>
<body>
	<!-- LOGIN PAGE -->
	<div id="login" class="page active">
		<h2>Login Page</h2>
		<!-- In a production app you would replace this with a login form or OAuth flow -->
		<button onclick="navigate('dashboard')">Login</button>
	</div>

	<!-- DASHBOARD PAGE -->
	<div id="dashboard" class="page">
		<h2>Dashboard</h2>
		<button onclick="navigate('settings')">Settings</button>
		<button onclick="navigate('profile')">Profile</button>
		<h3>Game Modes</h3>
		<button onclick="navigate('game_settings')">Local - Single</button>
		<button onclick="navigate('game_settings')">Local - Tournament</button>
		<button onclick="navigate('game_settings')">Online - Single</button>
		<button onclick="navigate('game_settings')">Online - Tournament</button>
	</div>

	<!-- PROFILE PAGE -->
	<div id="profile" class="page">
		<h2>Profile Settings</h2>
		<!-- <% if (user) { %>
			<img src="" alt="User Avatar" class="w-24 h-24 rounded-full border-2 border-purple-600 shadow">
			<p class="font-semibold">Username</p>
			<p class="text-sm"><%= user.email %></p>
		<% } else { %>
			<p>No user data available.</p>
		<% } %> -->
		<button onclick="navigate('dashboard')">Back</button>
	</div>

	<!-- SETTINGS PAGE -->
	<div id="settings" class="page">
		<h2>Settings</h2>
		<!-- <% if (user) { %>
			<a href="/api/user/<%= user.username %>/edit" class="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 transition-colors">
				Edit Profile
			</a>
			<a href="/api/user/logout" class="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 transition-colors">
				Logout
			</a>
		<% } else { %>
			<p>Please log in.</p>
		<% } %> -->
		<button onclick="navigate('dashboard')">Back</button>
	</div>

	<!-- GAME SETTINGS PAGE -->
	<div id="game_settings" class="page">
		<h2>Game Settings</h2>
		<button onclick="navigate('dashboard')">Back</button>
		<button onclick="navigate('game')">Start Game</button>
	</div>

	<!-- GAME PAGE -->
	<div id="game" class="page">
		<h2>Game Page</h2>
		<p>Click the button to flip a coin and simulate game scores.</p>
		<button onclick="flipCoin()">Flip Coin</button>
		<p id="gameResult"></p>
		<button onclick="navigate('dashboard')">End Game</button>
	</div>

	<!-- Basic SPA Routing Script -->
	<script>
		function navigate(page) {
			history.pushState({ page }, '', '#' + page);
			showPage(page);
		}
		
		function showPage(page) {
			document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
			const target = document.getElementById(page);
			if (target) target.classList.add('active');
		}
		
		window.onpopstate = function(event) {
			if (event.state) {
				showPage(event.state.page);
			}
		};
		
		window.onload = function() {
			const page = location.hash.replace('#', '') || 'login';
			showPage(page);
		};
		
		function flipCoin() {
			const result = Math.random() < 0.5 ? 'Heads' : 'Tails';
			document.getElementById('gameResult').innerText = 'Result: ' + result;
		}
	</script>
</body>
</html>
