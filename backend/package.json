{
	"name": "transcend",
	"version": "1.0.0",
	"description": "",
	"main": "demo.js",
	"scripts": {
		"nodemon": "nodemon",
		"old": "node --watch dist/app.js",
		"build:css": "tailwindcss -i ./src/public/css/tailwind.css -o ./src/public/css/output.css --minify",
		"build:ts": "tsc",
		"build": "npm run build:css && npm run build:ts",
		"dev:css": "tailwindcss -i ./src/public/css/tailwind.css -o ./src/public/css/output.css --watch",
		"dev:ts": "tsc -w",
		"dev:copy": "copyfiles -u 2 'src/public/**/*.{html,css,png}' dist/public --watch",
		"dev": "concurrently \"npm run dev:ts\" \"npm run dev:css\" \"npm run dev:copy\" \"nodemon\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@fastify/cookie": "^6.0.0",
		"@fastify/formbody": "^7.0.0",
		"@fastify/jwt": "^8.0.0",
		"@fastify/multipart": "^8.0.0",
		"@fastify/oauth2": "^7.0.0",
		"@fastify/static": "^7.0.0",
		"@fastify/view": "^7.0.0",
		"@tailwindcss/cli": "^4.0.12",
		"ajv": "^7.0.0",
		"better-sqlite3": "^11.8.1",
		"concurrently": "^7.6.0",
		"copyfiles": "^2.4.1",
		"ejs": "^3.1.9",
		"env-schema": "^6.0.1",
		"fastify": "^4.28.1",
		"nodemon": "^3.1.9",
		"ts-node": "^10.9.2",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.12",
		"@types/ejs": "^3.1.5",
		"@types/node": "^22.13.8",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.0.12",
		"typescript": "^5.8.2"
	}
}
