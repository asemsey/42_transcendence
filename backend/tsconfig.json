{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}